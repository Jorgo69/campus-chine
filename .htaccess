# ================================================
# .htaccess pour Laravel sur hébergement mutualisé LWS
# Placez ce fichier à la RACINE de votre sous-domaine
# ================================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # ------------------------------------------------
    # Redirection de tout le trafic vers /public
    # ------------------------------------------------
    
    # Si le fichier ou dossier existe directement, le servir
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Rediriger tout vers public/index.php
    RewriteRule ^(.*)$ /public/$1 [L]
    
    # ------------------------------------------------
    # Sécurité : Bloquer l'accès aux fichiers sensibles
    # ------------------------------------------------
    
    # Bloquer .env
    RewriteRule ^\.env$ - [F,L]
    
    # Bloquer les fichiers de config
    RewriteRule ^config/ - [F,L]
    
    # Bloquer le dossier storage (sauf storage/app/public via symlink)
    RewriteRule ^storage/(?!app/public) - [F,L]
    
    # Bloquer le dossier vendor
    RewriteRule ^vendor/ - [F,L]
    
    # Bloquer les fichiers .php à la racine (sauf via public)
    RewriteRule ^(?!public/).*\.php$ - [F,L]
</IfModule>

# ================================================
# Sécurité supplémentaire
# ================================================

# Désactiver l'affichage du contenu des répertoires
Options -Indexes

# Protéger contre le clickjacking
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Bloquer l'accès aux fichiers cachés (sauf .well-known pour SSL)
<FilesMatch "^\.(?!well-known)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloquer l'accès aux fichiers de sauvegarde
<FilesMatch "\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ================================================
# Compression GZIP pour de meilleures performances
# ================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/x-javascript
    AddOutputFilterByType DEFLATE application/json application/xml
    AddOutputFilterByType DEFLATE font/opentype font/truetype font/eot
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# ================================================
# Cache des assets statiques
# ================================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>
